<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
                                html: {method: :delete },
                                remote: true) do |f| %>
    <%= hidden_field_tag :follow_id, @user.id %>
    <div class="text-center"><%= f.submit "Unfollow", class: "btn btn-large btn-danger px-5" %></div>
<% end %>

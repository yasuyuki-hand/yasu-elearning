<% provide(:title, @user.name) %>
<div class="top-image2" id="contents">
    <div class="container mt-5">
        <h1 class="text-white">User Profile</h1>
        <div class="row">
            <div class="col-lg-4">
                <div class="container">
                    <div class="card mb-2">
                    
                        <div class="card-body">
                        <div class="text-center">
                                    <div class="avatar_picture center">
                                    <% if @user.image? %>
                                        <%= image_tag @user.image.url, class: "icon" %> 
                                    <% else %>
                                        <img src="/assets/default.png" class="icon" alt="ユーザーアイコン">
                                    <% end %>
                                        <%#= gravatar_for @user, class: "text-center" %>
                                    </div>
                            </div>
                            
                            <div class="text-center">
                                <h2><%= @user.name %></h2>
                            </div>
                            <div id="follow_form ">
                                <%= render 'follow_form' if logged_in? %>
                            </div>
                            <div class="text-center">
                                <%= render 'shared/stats' %>
                            </div>
                            <div class="text-center mt-3">
                            <%#= link_to "#{current_user.answers.count} words learned", words_path, class: "btn btn-lg btn-warning" %>
                                <%= total = @user.answers.count %> words learned
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% if @user.activities.any? %>
            <div class="col-md-8">
                <div class="container">
                    <div class="card">
                        <div class="card-header">Activities</div>
                            <div class="card-body">
                                <ol class="activities">
                                   <%= render @activities %>
                                </ol>
                                <br>
                                <%= will_paginate @activities %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% else %>
            <div class="container col-7">
                <div class="row justify-content-center">
                    <div class="card shadow mt-4 col-lg-8">
                        <div class="card-body">
                            <span>
                                <h3 class="center">No acitivites.</h3>
                                <div class="image">
                                    <%#= link_to image_tag("1906_Surprised_Pikachu.png", alt: "Pikachu emote"),
                                        'https://discordemoji.com/assets/emoji/1906_Surprised_Pikachu.png' %>
                                </div>
                                <br>
                                <% if @user == current_user %>
                                    <h5 class="center">Why don't you try following other users?</h5>
                                    <div class="row justify-content-center">
                                        <%= link_to "Find friends", users_path %>
                                    </div>
                                <% end %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
    <% end %>
        </div>
    </div>
</div>
<%= form_for(@user) do |f| %>
    <%= f.label :name, class: "text-dark" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email, class: "text-dark" %>
    <%= f.text_field :email, class: "form-control" %>

    <%= f.label :password, class: "text-dark" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, "Confirmation", class: "text-dark" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.submit "Create my account", class: "btn btn-block btn-primary my-4" %>
<% end %>
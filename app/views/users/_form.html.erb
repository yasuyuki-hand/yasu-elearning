<%= form_for(@user) do |f| %>
<%=render 'shared/error_messages', object: @user %>
    <%= f.label :image,"Picture", class: "text-dark mt-3" %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
<div class="mt-3">
    <%= f.label :name, class: "text-dark" %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email, class: "text-dark" %>
    <%= f.text_field :email, class: "form-control" %>

    <%= f.label :password, class: "text-dark" %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, "Confirmation", class: "text-dark" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.submit "Create my account", class: "btn btn-block btn-primary py-2 my-4" %>
</div>
<% if logged_in? %>
        <% if current_user.admin %>
            <div class="form-check form-group">
                <%= f.check_box :admin, class: "form-check-input" %>
                <%= f.label :admin, class: "form-check-label" %>
            </div>
        <% end %>
    <% end %>
<% end %>
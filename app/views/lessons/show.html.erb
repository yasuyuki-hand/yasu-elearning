<div class="container">
    <div class="container container-small" "="">
        <div class="row">
            <div class="col-sm-8 col-center">
                <div class="row">
                    <div class="col-sm-6">
                        <h1></h1>
                    </div>

                    <div class="col-sm-6 text-right result">
                        <strong>Result: ofã€€<%= @answers.count %></strong>
                       
                    </div>
                </div>

                <div class="row">
                    <table class="table result">
                        <tbody>
                            <tr>
                                <th>Word</th>
                                <th>Your Answer</th>
                                <th>Correct Answer</th>
                                <th></th>
                            </tr>
                            <% @answers.each do |answer| %>
                                <tr>
                                    <td><%= answer.word.word %></td>
                                    <td><%= answer.choice.choices %></td>
                                    <td><%= answer.word.correct_answer %></td>
                                    <% if answer.choice.choices == answer.word.correct_answer %>
                                    <td>
                                        <i class="fas fa-check"></i>
                                    </td>
                                    <% else %>
                                    <td>
                                        <i class="fas fa-times"></i>
                                    </td>
                                    <% end %>
                                </tr>
                            <% end %>                 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

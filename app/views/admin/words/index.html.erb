<div class="container">
    <div class="container container-small">
	    <div class="panel">
		    <div class="panel-heading">
			    <div class="row">
				    <div class="col-sm-6">
					    <span><strong>Admin Word Show Page</strong></span>
				    </div>
				    <div class="col-sm-6 text-right">
					    <a class="btn btn-success py-2" href="<%= new_admin_category_word_path %>">ADD WORD</a>
					    <a href="<%= admin_categories_path %>">BACK</a>
				    </div>
			    </div>
		    </div>
		    <table class="table">
			    <tbody>
				    <tr>
                        <th>Word</th>
                        <th>Answer</th>
                        <th>Action</th>
				    </tr>
                    <% @words.each do |word| %>
                    <tr>
                        <th><%= word.word %></th>
                        <th>
                            <% word.choices.each do |choice| %>
                                <% if choice.correct_ans? %>
                                    <%= choice.choices %>
                                <% end %>
                            <% end %>
                        </th>
                        <th><a class="btn btn-warning px-1" href="<%= edit_admin_category_word_path(@category,word) %>">Edit</a>
                            <%= link_to "Delete", admin_category_word_path(@category,word), method: :delete,
                                      data: { confirm: "You sure?" } %>     
                        </th>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>


<% provide(:title, "Categories") %>
<div class="container">
    <div class="container container-small mt-3">
	    <h2 class="mt-5">Categories</h2>
	        <div class="row object-list mt-4">
                <% @categories.each do |category| %>
		        <div class="col-sm-6">
			        <section class="col-sm-12">
				        <div class="detail">
					        <h1><%= category.title %></h1>
					        <p><%= category.description %></p>
				        </div>
                        <div class="text-right">
					        <a class="btn btn-info px-5 py-2" href="">LEARN</a>	
                        </div>		
			        </section>
		        </div>
                <% end %>
            </div>
    </div>
</div>

    
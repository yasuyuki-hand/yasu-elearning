<% @categories.each do |category| %>
    <div class="col-sm-6">
        <section class="col-sm-12">
            <div class="detail">
                <h1><%= category.title %></h1>
                <p><%= category.description %></p>
            </div>
            <div class="text-right">
                <%= render 'learn', category: category %>
            </div>		
        </section>
    </div>
<% end %>